#include <iostream>

int main() {
    // Create an array of characters
    char arr[] = {'H', 'e', 'l', 'l', 'o', '\0'};

    // Create a pointer to the array of characters
    char* ptr = arr;

    // Display the values of the array using the pointer
    std::cout << "The values of the character array are: ";
    for(int i = 0; ptr[i] != '\0'; ++i) {
        std::cout << *(ptr + i);
    }
    std::cout << std::endl;

    return 0;
}
out put:
The values of the character array are: Hello
