#include <iostream>

// Overloaded function to add two integers
int add(int a, int b) {
    return a + b;
}

// Overloaded function to add two floating-point numbers
float add(float a, float b) {
    return a + b;
}

int main() {
    int intResult = add(3, 4);
    float floatResult = add(3.5f, 4.5f);

    std::cout << "Result of adding two integers (3 + 4): " << intResult << std::endl;
    std::cout << "Result of adding two floats (3.5 + 4.5): " << floatResult << std::endl;

    return 0;
}
Result of adding two integers (3 + 4): 7
Result of adding two floats (3.5 + 4.5): 8
