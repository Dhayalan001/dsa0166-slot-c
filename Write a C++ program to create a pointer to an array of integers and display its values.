#include <iostream>

int main() {
    // Create an array of integers
    int arr[] = {1, 2, 3, 4, 5};

    // Create a pointer to the array of integers
    int* ptr = arr;

    // Get the size of the array
    int size = sizeof(arr) / sizeof(arr[0]);

    // Display the values of the array using the pointer
    std::cout << "The values of the array are: ";
    for(int i = 0; i < size; ++i) {
        std::cout << *(ptr + i) << " ";
    }
    std::cout << std::endl;

    return 0;
}
out put:
The values of the array are: 1 2 3 4 5
